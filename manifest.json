{
  "manifest_version": 3,
  "name": "PreviewTube",
  "version": "1.0.0",
  "description": "Preview YouTube video transcripts before entering the video",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "PreviewTube"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://www.youtube.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}

